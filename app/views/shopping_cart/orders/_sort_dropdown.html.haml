%p.in-grey-600.small.mb-10.visible-xs= t('sort_by')
.dropdown.general-order-dropdown.mb-20
  %a.dropdown-toggle.dropdown-btn.width-100{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    = order_state_title
    %i.fa.fa-angle-down.dropdown-icon
  %ul.dropdown-menu
    %li
      = link_to "All", orders_path(sort_type: :all)
    %li
      = link_to "Waiting for processing", orders_path(sort_type: :in_queue)
    %li
      = link_to "In Progress", orders_path(sort_type: :in_progress)
    %li
      = link_to "In Delivery", orders_path(sort_type: :in_delivery)
    %li
      = link_to "Delivered", orders_path(sort_type: :delivered)